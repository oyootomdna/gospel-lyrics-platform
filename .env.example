# Gospel Lyrics Platform Environment Variables
# Copy this to .env and fill in your actual values

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CF_ZONE_ID=your_zone_id_here
CF_ACCOUNT_ID=your_account_id_here
CF_ZONE_NAME=gospellyricsub.com

# Pesapal Configuration (Production)
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key_here
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret_here
PESAPAL_BASE=https://pay.pesapal.com/v3/api
PESAPAL_CALLBACK_URL=https://gospellyricsub.com/pay/callback
PESAPAL_NOTIFICATION_ID=your_notification_id_here

# Domain Configuration
DOMAIN=gospellyricsub.com

# Database Configuration (Cloudflare D1)
DATABASE_ID=your_d1_database_id_here

# Application Settings
ENVIRONMENT=production
DEBUG=false

# Pricing (UGX)
PRICE_LYRICS=100
PRICE_AUDIO=70
PRICE_STREAM=50

# VAT Configuration
VAT_RATE=18
ISSUER_NAME=Gospel Lyrics Platform
ISSUER_TIN=your_tin_number_here
ISSUER_ADDRESS=Kampala, Uganda
